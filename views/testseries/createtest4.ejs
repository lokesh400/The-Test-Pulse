<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Test</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .question-block {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <h1>Create a New Test</h1>

    <form action="/admin/create" method="POST" id="testForm" enctype="multipart/form-data">
        <label for="title">Test Title:</label>
        <input type="text" name="title" required><br><br>

        <label for="time">Time (in minutes):</label>
        <input type="number" name="time" required><br><br>

        <div id="questions-container">
            <div class="question-block">
                <h3>Question 1</h3>
                <input type="file" name="questions[0][questionText]" accept="image/*" required><br>
                <input type="text" name="questions[0][options][]" placeholder="Option 1" required>
                <input type="text" name="questions[0][options][]" placeholder="Option 2" required>
                <input type="text" name="questions[0][options][]" placeholder="Option 3" required>
                <input type="text" name="questions[0][options][]" placeholder="Option 4" required><br>
                <label>Correct Option (0-3):</label>
                <input type="number" name="questions[0][correctAnswer]" min="0" max="3" required><br><br>
            </div>
        </div>

        <button type="button" id="addQuestionButton" onclick="addQuestion()">Add Another Question</button><br><br>
        <button type="submit">Create Test</button>
    </form>

    <script>
        let questionCount = 1; // Start with the first question already added

        function addQuestion() {
            const container = document.getElementById('questions-container');
            const questionBlock = document.createElement('div');
            questionBlock.className = 'question-block';
            questionBlock.innerHTML = `
                <h3>Question ${questionCount + 1}</h3>
                <input type="file" name="questions[${questionCount}][questionText]" accept="image/*" required><br>
                <input type="text" name="questions[${questionCount}][options][]" placeholder="Option 1" required>
                <input type="text" name="questions[${questionCount}][options][]" placeholder="Option 2" required>
                <input type="text" name="questions[${questionCount}][options][]" placeholder="Option 3" required>
                <input type="text" name="questions[${questionCount}][options][]" placeholder="Option 4" required><br>
                <label>Correct Option (0-3):</label>
                <input type="number" name="questions[${questionCount}][correctAnswer]" min="0" max="3" required><br><br>
            `;
            container.appendChild(questionBlock);
            questionCount++;
        }
    </script>

</body>
</html>
