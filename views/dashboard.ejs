<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <style>
    /* General reset */
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      background-color: #111b21;
      color: #ffffff;
    }

    /* Header Styles */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px 15px;
      background-color: #202c33;
      z-index: 1000;
    }
    .header .title {
      font-size: 24px;
      font-weight: bold;
    }
    .header .icons i {
      margin-left: 15px;
      font-size: 20px;
    }

    /* Footer Styles */
    .footer {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-around;
      padding: 10px 0;
      background-color: #202c33;
      z-index: 1000;
    }
    .footer i {
      font-size: 24px;
      color: #8696a0;
    }
    .footer i.active {
      color: #00a884;
    }

    /* Main content area between header and footer */
    .main-content {
      padding-top: 60px; /* Adjust for header height */
      padding-bottom: 60px; /* Adjust for footer height */
      overflow-y: auto; /* Allow scrolling */
      height: calc(100vh - 120px); /* Full height minus header and footer */
    }

    .chat-list {
      padding: 10px 0;
    }

    .chat-item {
      display: flex;
      align-items: center;
      padding: 15px;
      border-radius: 10px;
      cursor: pointer;
      background-color: #111b21;
      color: #ffffff;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 10px;
    }

    .chat-item img {
      border-radius: 50%;
      margin-right: 15px;
    }

    .chat-item .chat-name {
      font-size: 16px;
      font-weight: bold;
    }

    .chat-item .chat-info {
      flex: 1;
    }

    .chat-item .chat-message {
      font-size: 14px;
      color: #8696a0;
    }

    .chat-item .chat-time {
      font-size: 12px;
      color: #8696a0;
    }

    .chat-item .chat-icons {
      display: flex;
      align-items: center;
    }
    .chat-item .chat-icons i {
      margin-left: 10px;
      font-size: 16px;
      color: #8696a0;
    }

    /* Search bar */
    .search-bar {
      display: flex;
      align-items: center;
      padding: 10px 15px;
      background-color: #202c33;
    }

    .search-bar input {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 20px;
      background-color: #2a3942;
      color: #ffffff;
      font-size: 16px;
    }

  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    <div class="title">
      The Test Pulse
    </div>
    <div class="icons">
      <i class="fas fa-camera"></i>
      <i class="fas fa-search"></i>
      <i class="fas fa-ellipsis-v"></i>
    </div>
  </div>

  <!-- Main content section -->
  <div class="main-content">
    <div class="search-bar">
      <input placeholder="Search..." type="text"/>
    </div>

    <div class="chat-list">
      <% users.forEach(user => { %>
        <div class="chat-item" onclick="startChat('<%= user.username %>')">
          <img alt="Group icon" src="https://storage.googleapis.com/a1aa/image/ofht1dek4Hu7hEcTarCDVBC9YhFjVqkGp0o7NOGA4oWBpxyTA.jpg" width="50"/>
          <span class="chat-name"><%= user.name %></span>
        </div> 
      <% }); %>    
    </div>
  </div>

  <!-- Footer -->
  <div class="footer">
    <i class="fas fa-comment-dots active"></i>
    <i class="fas fa-clock"></i>
    <i class="fas fa-users"></i>
    <i class="fas fa-phone"></i>
  </div>

  <script>
    function startChat(username) {
      window.location.href = `/chat?recipient=${username}`;
    }
  </script>

</body>
</html>