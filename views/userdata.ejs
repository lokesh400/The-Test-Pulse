<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        /* Basic table styling */
.table-container {
    overflow-x: auto; /* Enable horizontal scrolling */
}

table {
    width: 100%;
    border-collapse: collapse;
}

th, td {
    padding: 12px;
    border: 1px solid #ddd;
}

thead {
    background-color: #333;
    color: white;
}

tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

tbody tr:hover {
    background-color: #ddd;
}

/* Styling for contacted and not-contacted statuses */
.contacted {
    background-color: #d4edda; /* Light green for contacted */
}

.not-contacted {
    background-color: #f8d7da; /* Light red for not contacted */
}

td {
    text-align: left;
}

th {
    background-color: #4CAF50; /* Green background for header */
    color: white;
    font-weight: bold;
}

    </style>
</head>
<body>

    <h1>User Data</h1>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Ph.Number</th>
                <th>Email</th>
                <th>Role</th>
                <th>College</th>
            </tr>
        </thead>
        <tbody>



            <tbody>
                <% roles.forEach(function(role) { %>
                    <tr>
                        <td><%= role.Name %></td>
                        <td><%= role.Numer %></td>
                        <td><%= role.Email %></td>
                        <td><%= role.Role %></td>
                        <td><%= role.College %></td>
                    </tr>
                <% }) %>
            </tbody>
    </table>
</body>
</html>