<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="./css/student.css">
</head>
<body>
    <div class="container">

        <!-- Sidebar -->
        <div class="sidebar">
           <%- include("./components/student/sidebar.ejs") %>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="search-bar">
                <input type="text" placeholder="Search">
            </div>

            <div class="welcome-banner">
                <%- include("./components/student/welcome.ejs") %>
            </div>

            <div class="enrolled-courses">
              <%- include("./components/student/enrolledbatches.ejs") %>
            </div>

            <div class="course-instructors">
                <h2>Course Instructors</h2>
                <!-- Add course instructors here -->
            </div>

            <div class="daily-notice">
                <h2>Daily Notice</h2>
            </div>

        </div>
    </div>

    <!-- Footer Navigation for Mobile -->
    <div class="footer-nav">
      <%- include("./components/student/footer.ejs") %>
    </div>
</body>
</html>
