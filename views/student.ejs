<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/student.css">
    <link rel="stylesheet" href="/styles/quickaccess.css">
    <link rel="stylesheet" href="/styles/popularbatches.css">
    <link rel="stylesheet" href="/styles/studentsidebar.css">
    <style>
        @keyframes slideIn {
            from { transform: translateX(100%); }
            to { transform: translateX(0); }
        }
    
        @keyframes slideOut {
            from { transform: translateX(0); }
            to { transform: translateX(100%); }
        }
    </style>
</head>
<body>

    <%- include("./components/flash.ejs") %>

    <div class="container">

        <!-- Sidebar -->
        <div class="sidebar">
           <%- include("./components/student/sidebar.ejs") %>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="search-bar">
                <input type="text" placeholder="Search">
            </div>

            <div class="welcome-banner">
                <%- include("./components/student/welcome.ejs") %>
            </div>

            <div style="background-color: #ffffff;padding: 2px; border-radius: 10px;">
                <h1 style="margin-left: 10px;">Quick Access</h1>
            <div class="enrolled-courses">
              <%- include("./components/student/enrolledbatches.ejs") %>
            </div>
            </div>

            <hr>

            <div>
                <%- include("./components/student/popularbatches.ejs") %>
              </div>

            <div class="course-instructors">
                <!-- <h2>Course Instructors</h2> -->
                <!-- Add course instructors here -->
            </div>

            <div class="daily-notice">
                <!-- <h2>Daily Notice</h2> -->
            </div>

        </div>
    </div>

    <!-- Footer Navigation for Mobile -->
    <div class="header-container" >
        <%- include("./components/student/student-header.ejs") %>
      </div>

    <div class="footer-nav" >
      <%- include("./components/student/footer.ejs") %>
    </div>


<script>
    // Auto-hide toast notifications after a specified time
    setTimeout(() => {
        const successToast = document.getElementById('successToast');
        const errorToast = document.getElementById('errorToast');
        if (successToast) {
            successToast.style.display = 'none';
        }
        if (errorToast) {
            errorToast.style.display = 'none';
        }
    }, 3500); // Adjust timing as needed
</script>

</body>
</html>
