<% if (success_msg.length > 0) { %>
    <div id="successToast" style="
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #4CAF50; /* Green for success */
        color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        transform: translateX(100%);
        animation: slideIn 0.5s forwards, slideOut 0.5s 3s forwards;">
        <%= success_msg[0] %>
    </div>
<% } %>

<% if (error_msg.length > 0) { %>
    <div id="errorToast" style="
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #ff4d4d; /* Red for error */
        color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        transform: translateX(100%);
        animation: slideIn 0.5s forwards, slideOut 0.5s 3s forwards;">
        <%= error_msg[0] %>
    </div>
<% } %>
