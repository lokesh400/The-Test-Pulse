<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    
    <!-- Bootstrap & Font Awesome for Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    
    <!-- Custom Styling -->
    <link rel="stylesheet" href="/styles/sidebar3.css"> <!-- Keep the sidebar style -->
    <link rel="stylesheet" href="/styles/admin.css">
    
    <style>
        /* Global Styles */
        body {
            background: #f7f7f7;
            font-family: 'Roboto', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Sidebar Adjustments */
        #header-comp {
            /* Ensure the sidebar doesn't overlap the content */
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 260px;
            background-color: #2C3E50; /* Adjust based on your sidebar style */
            color: white;
            padding-top: 20px;
            padding-left: 20px;
            overflow-y: auto;
        }

        /* Table Section */
        .container {
            margin-top: 0;
            margin-left: 260px; /* Account for sidebar width */
            padding-right: 20px;
            width: calc(100% - 260px); /* Fill remaining width after sidebar */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 0; /* No margin at the top */
        }

        th, td {
            padding: 15px;
            text-align: center;
        }

        th {
            background-color: #0069D9;
            color: #fff;
            font-size: 1.1rem;
            font-weight: 600;
        }

        tr {
            background-color: #fff;
            transition: background-color 0.3s ease;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        td {
            font-size: 1rem;
            color: #555;
        }

        .btn {
            padding: 8px 15px;
            font-size: 1rem;
            border-radius: 25px;
            text-transform: uppercase;
            font-weight: 500;
        }

        .btn-primary {
            background-color: #0069D9;
            border-color: #0069D9;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

        /* Modal Styles */
        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #0069D9;
            color: white;
            border-radius: 10px 10px 0 0;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            border-top: none;
        }

    </style>
</head>
<body>

    <main>
        <!-- Sidebar -->
        <div id="header-comp">
            <%- include('../components/admin-sidebar.ejs') %> <!-- Sidebar retained as is -->
        </div>

        <!-- Table Section -->
        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Batches Purchased</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < users.length; i++) { %>
                        <tr>
                            <td><%= users[i].name %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].contactNumber %></td>
                            <td><%= users[i].purchasedBatches.length %></td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    View Details
                                </button>
                            </td>
                        </tr>

                        <!-- Modal -->
                        

                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <section>
        <% for (let i = 0; i < users.length; i++) { %>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">User Details</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Modal Content -->
                            <p><strong>Name:</strong> <%= users[i].name %></p>
                            <p><strong>Email:</strong> <%= users[i].email %></p>
                            <p><strong>Contact:</strong> <%= users[i].contactNumber %></p>
                            <p><strong>Batches Purchased:</strong> <%= users[i].purchasedBatches.length %></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </section>

    <!-- Bootstrap JS & Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
